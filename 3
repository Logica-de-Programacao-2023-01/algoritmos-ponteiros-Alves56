package main

import "fmt"

func reverterString(ptr *string) {
	str := *ptr
	runes := []rune(str)
	length := len(runes)
	for i, j := 0, length-1; i < j; i, j = i+1, j-1 {
		runes[i], runes[j] = runes[j], runes[i]
	}
	*ptr = string(runes)
}

func main() {
	texto := "OlÃ¡, mundo!"

	reverterString(&texto)

	fmt.Println("Texto reverso:", texto)
}
